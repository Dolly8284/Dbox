<div class="signup-form">
  <h3>Sign up</h3>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="inputContainer">
      <%= f.text_field :first_name , placeholder: "First Name"%>
    </div>
    <br>
    <div class="inputContainer">
      <%= f.text_field :last_name , placeholder: "Last Name"%>
    </div>
    <br>
    <div class="inputContainer">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"%> <br />
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <br>     
    <div class="inputContainer">   
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password"%>
    </div>
    <br>
    <div class="inputContainer">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "Confirm Password"%>
    </div>
    <br>
    <div class="inputContainer">
      <%= f.text_field :date_of_birth , placeholder: "Date of Birth"%>
    </div>
    <br>
    <div class="inputContainer">
      <%= f.select(:gender,  {"Male" => true , "Female" => true, "Other" => true}, {:selected => (@user.gender?)}) %>
    </div>
    <br> 
    <div class="actions">
      <%= f.submit "Sign up" , class: "btn btn-primary center-block"%>
    </div>
    <br>
  <% end %>
  <%= render "devise/shared/links"%>
</div>