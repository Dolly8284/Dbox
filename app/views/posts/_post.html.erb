<div class="col-md-8">
  <%= image_tag url_for(post.avatar),width:'200px;' if post.avatar.attached?  %>
  <div class="card-body">
    <p class="card-text"><%= post.title %></p>
    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
        <%= link_to "Share", post_path(post), class: "btn btn-sm btn-outline-primary" %>
        <%= link_to "Edit", edit_post_path(post), :remote => true  , class: "btn btn-sm btn-outline-primary" %>
        <%= button_to 'Delete', post_path(post), method: :delete ,  class:"btn btn-sm btn-outline-primary" %>
      </div>
    </div>
    <br/>
  </div>
</div>


